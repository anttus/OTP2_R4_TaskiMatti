<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/param_task"
            android:inputType="textAutoComplete|textAutoCorrect|textCapWords"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/param_description"
            android:inputType="textMultiLine|textCapSentences|textLongMessage|textAutoCorrect"
            android:minHeight="75sp"
            android:paddingBottom="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="20sp"
            android:singleLine="false" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>